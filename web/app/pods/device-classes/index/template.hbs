{{link-to 'New class' 'device-classes.new' class='btn btn-success'}}

<div class="panel panel-default">
<div class="panel-heading">
  <h3 class="panel-title">Device classes</h3>
</div>
<div class="panel-body">
  <table class="table  table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Api Token</th>
        <th></th>
      </tr>
      </thead>
    <tbody>
      {{#each klass in model}}
      <tr>
        <td {{action 'showDevices' klass}} style="cursor:pointer;vertical-align:middle">{{klass.name}}</td>
        <td {{action 'showDevices' klass}} style="cursor:pointer;vertical-align:middle">{{klass.api_key}}</td>
        <td><a class="btn btn-danger pull-right" href="#" {{action 'delete' klass}}>Delete</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>

</div>

</div>
